---
import { siteConfig } from '@data/site';

interface Props {
  title?: string;
  subtitle?: string;
  showProfileImage?: boolean;
}

const { title, subtitle, showProfileImage = true } = Astro.props;
---

<section class="section bg-gradient-to-br from-primary-50 via-white to-primary-50 min-h-[80vh] flex items-center pt-16">
  <div class="container">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Profile Image -->
      {showProfileImage && (
        <div class="mb-8 flex justify-center animate-fade-in">
          <div class="relative">
            <div class="w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-4 border-white shadow-2xl">
              <img
                src="/images/profile.jpeg"
                alt={siteConfig.author}
                class="w-full h-full object-cover"
                onerror="this.src='https://ui-avatars.com/api/?name={siteConfig.author}&size=200&background=0ea5e9&color=fff&bold=true'"
              />
            </div>
            <!-- Decorative ring -->
            <div class="absolute inset-0 rounded-full border-4 border-primary-200 animate-pulse"></div>
          </div>
        </div>
      )}
      <!-- Greeting -->
      <div class="mb-6 animate-fade-in">
        <span class="inline-block px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
          ðŸ‘‹ Welcome to my portfolio
        </span>
      </div>

      <!-- Main Heading -->
      <h1 class="mb-6 animate-fade-in animation-delay-200">
        {title || `Hi, I'm ${siteConfig.author}`}
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-600 mb-8 animate-fade-in animation-delay-400">
        {subtitle || siteConfig.description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap gap-4 justify-center animate-fade-in animation-delay-400">
        <a href="/projects" class="btn btn-primary">
          View Projects
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        <a href="/contact" class="btn btn-outline">
          Contact Me
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-16 animate-bounce">
        <svg class="w-6 h-6 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>
