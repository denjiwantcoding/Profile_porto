const categories = ['All', 'Web', 'Mobile', 'AI/ML', 'Tools'];
---

<MainLayout
  title="Projects"
  description="Portfolio project yang telah saya kerjakan"
>
  <section class="section pt-32">
    <div class="container">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="mb-4">My Projects</h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Koleksi project yang telah saya kerjakan, mulai dari web applications,
          mobile apps, hingga AI-powered solutions
        </p>
      </div>

      <!-- Filter Buttons (Optional - for future implementation) -->
      <div class="flex flex-wrap gap-3 justify-center mb-12">
        {categories.map((category) => (
          <button
            class="px-6 py-2 rounded-lg font-medium text-sm transition-all hover:scale-105"
            class:list={[
              category === 'All'
                ? 'bg-primary-600 text-white'
                : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
            ]}
          >
            {category}
          </button>
        ))}
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project: any) => (
          <ProjectCard project={project} />
        ))}
      </div>

      <!-- No Projects Message -->
      {projects.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">No projects found</p>
        </div>
      )}

      <!-- Stats Section -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="card text-center">
          <div class="text-4xl font-bold text-primary-600 mb-2">
            {projects.length}+
          </div>
          <div class="text-gray-600">Projects Completed</div>
        </div>
        <div class="card text-center">
          <div class="text-4xl font-bold text-primary-600 mb-2">2+</div>
          <div class="text-gray-600">Years Experience</div>
        </div>
        <div class="card text-center">
          <div class="text-4xl font-bold text-primary-600 mb-2">0</div>
          <div class="text-gray-600">Happy Clients</div>
        </div>
        <div class="card text-center">
          <div class="text-4xl font-bold text-primary-600 mb-2">10+</div>
          <div class="text-gray-600">Technologies</div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Add animation for project cards */
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  article {
    animation: slide-up 0.5s ease-out forwards;
  }

  article:nth-child(1) { animation-delay: 0.1s; }
  article:nth-child(2) { animation-delay: 0.2s; }
  article:nth-child(3) { animation-delay: 0.3s; }
  article:nth-child(4) { animation-delay: 0.4s; }
  article:nth-child(5) { animation-delay: 0.5s; }
  article:nth-child(6) { animation-delay: 0.6s; }
</style>
